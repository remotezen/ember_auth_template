<h1>Contact</h1>
<form {{action "saveMessage" on="submit"}}>
	{{#if errorMessage}}
		<p>
			<strong>Error:</strong>
			<code>{{errorMessage}}</code>
		</p>
	{{/if}}
	<div>
		<label for="email">Email</label>
		{{input value=model.email placeholder="Enter email"}}
	</div>
	<div>
		<label for="message">Message</label>
		{{textarea value=model.message placeholder="Please enter in your message"}}
	</div>
	<button type="submit" {{action 'saveMessage' model}}
		disabled={{model.isNotValid}}>Send Message</button>
</form>
